{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "mon-theme-aca/events",
    "version": "1.2.0",
    "title": "Événements",
    "category": "mon-theme-aca",
    "icon": "calendar-alt",
    "description": "Affiche un calendrier et une liste d'événements entièrement personnalisables.",
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "attributes": {
        "sectionTitle": {
            "type": "string",
            "default": "Événements à Venir"
        },
        "sectionSubtitle": {
            "type": "string",
            "default": "Participez aux événements qui façonnent l'avenir de la filière cotonnière africaine"
        },
        "showCalendar": {
            "type": "boolean",
            "default": true
        },
        "eventItems": {
            "type": "array",
            "default": [
                {
                    "id": 1,
                    "date": "2024-11-25",
                    "title": "Forum International du Coton Africain",
                    "location": "Abidjan, Côte d'Ivoire",
                    "time": "09:00 - 17:00",
                    "participants": "150",
                    "type": "Conférence",
                    "link": "#"
                },
                {
                    "id": 2,
                    "date": "2024-12-05",
                    "title": "Atelier Innovation Textile",
                    "location": "Dakar, Sénégal",
                    "time": "14:00 - 18:00",
                    "participants": "80",
                    "type": "Atelier",
                    "link": "#"
                }
            ]
        },
        "showEventType": {
            "type": "boolean",
            "default": true
        },
        "showTime": {
            "type": "boolean",
            "default": true
        },
        "showLocation": {
            "type": "boolean",
            "default": true
        },
        "showParticipants": {
            "type": "boolean",
            "default": true
        }
    },
    "textdomain": "mon-theme-aca",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./build/index.css",
    "style": "file:./build/style-index.css",
    "render": "file:./render.php",
    "viewScript": "file:./view.js"
}