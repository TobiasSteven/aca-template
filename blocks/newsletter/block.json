{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "mon-theme-aca/newsletter",
    "version": "1.0.0",
    "title": "Abonnement Newsletter",
    "category": "mon-theme-aca",
    "icon": "email",
    "description": "Permet aux visiteurs de s'abonner à la newsletter.",
    "keywords": ["newsletter", "abonnement", "email"],
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "attributes": {
        "sectionTitle": {
            "type": "string",
            "default": "Restez Informé"
        },
        "subtitle": {
            "type": "string",
            "default": "Recevez les dernières actualités, analyses de marché et opportunités de la filière cotonnière africaine directement dans votre boîte mail."
        },
        "buttonText": {
            "type": "string",
            "default": "S'abonner"
        },
        "placeholderText": {
            "type": "string",
            "default": "Votre adresse email"
        },
        "backgroundColor": {
            "type": "string",
            "default": "#2D9B8A"
        },
        "textColor": {
            "type": "string",
            "default": "#FFFFFF"
        },
        "buttonColor": {
            "type": "string",
            "default": "#28A745"
        },
        "buttonTextColor": {
            "type": "string",
            "default": "#FFFFFF"
        }
    },
    "textdomain": "mon-theme-aca",
    "editorScript": "file:./build/index.js",
    "style": "file:./build/style-index.css",
    "render": "file:./render.php"
}