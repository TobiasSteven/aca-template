{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "mon-theme-aca/publications-modal",
    "version": "1.0.0",
    "title": "Publications - Modal",
    "category": "mon-theme-aca",
    "icon": "welcome-view-site",
    "description": "Fenêtre modale pour afficher les détails d'une publication.",
    "keywords": ["publications", "modal", "détails", "aperçu"],
    "supports": {
        "html": false
    },
    "attributes": {
        "backgroundColor": {
            "type": "string",
            "default": "rgba(0, 0, 0, 0.7)"
        },
        "modalBgColor": {
            "type": "string",
            "default": "#FFFFFF"
        },
        "titleColor": {
            "type": "string",
            "default": "#1F6B5C"
        },
        "textColor": {
            "type": "string",
            "default": "#343A40"
        },
        "secondaryTextColor": {
            "type": "string",
            "default": "#6C757D"
        },
        "accentColor": {
            "type": "string",
            "default": "#2D9B8A"
        },
        "buttonBgColor": {
            "type": "string",
            "default": "#2D9B8A"
        },
        "buttonTextColor": {
            "type": "string",
            "default": "#FFFFFF"
        }
    },
    "textdomain": "mon-theme-aca",
    "editorScript": "file:./build/index.js",
    "editorStyle": "file:./build/index.css",
    "style": "file:./style-index.css"
}