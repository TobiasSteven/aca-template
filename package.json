{
    "name": "mon-theme-aca",
    "version": "1.0.0",
    "description": "Un thème WordPress modulable avec des blocs personnalisés",
    "main": "index.js",
    "scripts": {
        "build": "wp-scripts build blocks/stats-cards/index.js --output-path=blocks/stats-cards/build && wp-scripts build blocks/hero-slider/index.js --output-path=blocks/hero-slider/build && wp-scripts build blocks/recent-news/index.js --output-path=blocks/recent-news/build && wp-scripts build blocks/nos-missions/index.js --output-path=blocks/nos-missions/build",
        "start": "wp-scripts start blocks/stats-cards/index.js --output-path=blocks/stats-cards/build",
        "dev": "wp-scripts start blocks/stats-cards/index.js --output-path=blocks/stats-cards/build",
        "build:hero-slider": "wp-scripts build blocks/hero-slider/index.js --output-path=blocks/hero-slider/build",
        "start:hero-slider": "wp-scripts start blocks/hero-slider/index.js --output-path=blocks/hero-slider/build",
        "build:recent-news": "wp-scripts build blocks/recent-news/index.js --output-path=blocks/recent-news/build",
        "start:recent-news": "wp-scripts start blocks/recent-news/index.js --output-path=blocks/recent-news/build",
        "build:nos-missions": "wp-scripts build blocks/nos-missions/index.js --output-path=blocks/nos-missions/build",
        "start:nos-missions": "wp-scripts start blocks/nos-missions/index.js --output-path=blocks/nos-missions/build",
        "build:all": "npm run build"
    },
    "devDependencies": {
        "@wordpress/scripts": "^26.0.0"
    },
    "dependencies": {
        "@wordpress/block-editor": "^12.0.0",
        "@wordpress/blocks": "^12.0.0",
        "@wordpress/components": "^25.0.0",
        "@wordpress/core-data": "^6.0.0",
        "@wordpress/data": "^9.0.0",
        "@wordpress/element": "^5.0.0",
        "@wordpress/i18n": "^4.0.0"
    }
}